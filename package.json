{
  "name": "patternpunchknit",
  "description": "Pattern Punch Knit",
  "version": "1.0.1",
  "author": "Roger Antonsen and Laura Taalman",
  "private": true,
  "scripts": {
    "build:message": "echo -------------------------------- build --------------------------------",
    "build": "NODE_ENV=production npm-run-all copy:* js:build:* css:build:* php:build:*",
    "dev": "NODE_ENV=development npm-run-all --parallel js:listen:* css:listen:* php:listen:* server",
    "php": "php -S localhost:3004 -t htdocs",
    "open": "browser-sync start --no-notify --proxy 'localhost:3004' --browser 'Firefox Developer Edition' --port 3004 --files 'htdocs/*.js,htdocs/*.css,htdocs/*.php' ",
    "server": "npm-run-all --parallel php open",
    "copy:message": "echo -------------------------------- copy --------------------------------",
    "copy:alpine": "cp node_modules/alpinejs/dist/cdn.min.js htdocs/js/alpine.js",
    "copy:lilgui": "cp node_modules/lil-gui/dist/lil-gui.umd.min.js htdocs/js/lilgui.js",
    "copy:p5": "cp node_modules/p5/lib/p5.min.js htdocs/js/p5.js",
    "copy:clipboard": "cp node_modules/clipboard/dist/clipboard.min.js htdocs/js/clipboard.js",
    "js:build:message": "echo -------------------------------- js --------------------------------",
    "js:build:app": "terser source/app/*.js -m -c -o htdocs/js/app.js",
    "js:build:rollup": "rollup --config rollup.config.mjs --environment NODE_ENV:production",
    "js:listen:app": "onchange 'source/app/*.js' -- terser source/app/*.js -o htdocs/js/app.js",
    "js:listen:rollup": "rollup --config rollup.config.mjs --environment NODE_ENV:development --watch",
    "css:build:message": "echo -------------------------------- css --------------------------------",
    "css:build:tailwind": "npx tailwindcss -i source/css/styles.css -o htdocs/css/styles.css --minify",
    "css:listen:tailwind": "npx tailwindcss -i source/css/styles.css -o htdocs/css/styles.css --minify --watch",
    "php:build:message": "echo -------------------------------- php --------------------------------",
    "php:build:index": "html-minifier-terser --collapse-whitespace --remove-comments --remove-empty-attributes  --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes source/index.php -o htdocs/index.php",
    "php:listen:index": "onchange 'source/index.php' -- npm run php:build:index",
    "update:message": "echo -------------------------------- update --------------------------------",
    "update": "npm-run-all update:* copy:*",
    "update:npm": "pnpm -g update",
    "update:ncu": "ncu -u"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.2.1",
    "@tailwindcss/typography": "^0.5.8",
    "alpinejs": "^3.10.5",
    "browser-sync": "^2.27.10",
    "clipboard": "^2.0.11",
    "html-minifier-terser": "^7.1.0",
    "lil-gui": "^0.17.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "p5": "^1.5.0",
    "rollup": "^3.9.0",
    "tailwindcss": "^3.2.4",
    "terser": "^5.15.1"
  }
}
